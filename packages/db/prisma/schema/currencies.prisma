model Currency {
  id        String   @id // USD, BRL, etc.
  name      String
  symbol    String
  
  // Relations
  units                Unit[]
  leases               Lease[]
  payments             Payment[]
  expenses             Expense[]
  invoices             Invoice[]
  paymentPlans         PaymentPlan[]
  organizationSettings OrganizationSettings[]
  properties           Property[]

  @@unique([id])
  @@map("currency")
}

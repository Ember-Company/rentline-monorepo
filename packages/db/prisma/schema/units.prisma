model Unit {
  id          String    @id @default(uuid())
  propertyId  String
  property    Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  // Basic info
  unitNumber  String
  name        String?   // Optional friendly name (e.g., "Corner Suite", "Penthouse")
  type        String    // apartment, office, retail, storage, parking
  floor       Int?
  
  // Physical characteristics
  bedrooms    Int?
  bathrooms   Decimal?
  area        Decimal?  // sqft or m2
  
  // Status
  status      String    @default("available") // available, occupied, maintenance, reserved, sold
  category    String    @default("rent") // rent, sale, both - determines if unit can be rented/sold
  
  // Financial - Rent
  rentAmount  Decimal?
  depositAmount Decimal?
  
  // Financial - Sale
  salePrice   Decimal?  // Asking price for sale
  purchasePrice Decimal? // Actual purchase price (when sold)
  
  currencyId  String?
  currency    Currency? @relation(fields: [currencyId], references: [id])
  
  // Features
  features    String?   // JSON array
  amenities   String?   // JSON array
  description String?
  
  // Images
  coverImage  String?
  images      String?   // JSON array
  
  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  applications        Application[]
  leases              Lease[]
  sales                Sale[]
  maintenanceRequests MaintenanceRequest[]
  expenses            Expense[]
  documents           Document[]

  @@index([propertyId])
  @@index([status])
  @@index([type])
  @@index([currencyId])
  @@map("unit")
}

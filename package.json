{
	"name": "rentline",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"hono": "^4.8.2",
			"@trpc/server": "^11.5.0",
			"better-auth": "^1.4.0",
			"ai": "^5.0.49",
			"@ai-sdk/google": "^2.0.13",
			"dotenv": "^17.2.2",
			"react": "19.1.0",
			"react-dom": "19.1.0",
			"@trpc/tanstack-react-query": "^11.5.0",
			"@trpc/client": "^11.5.0",
			"@tanstack/react-query": "^5.85.5",
			"@prisma/client": "^7.0.0",
			"@ai-sdk/react": "^2.0.39",
			"@better-auth/expo": "^1.4.0"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @rentline/db db:push",
		"db:studio": "turbo -F @rentline/db db:studio",
		"db:generate": "turbo -F @rentline/db db:generate",
		"db:migrate": "turbo -F @rentline/db db:migrate",
		"db:start": "turbo -F @rentline/db db:start",
		"db:watch": "turbo -F @rentline/db db:watch",
		"db:stop": "turbo -F @rentline/db db:stop",
		"db:down": "turbo -F @rentline/db db:down"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"@types/bun": "^1.2.6",
		"@cloudflare/workers-types": "^4.20250822.0"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.1"
}
